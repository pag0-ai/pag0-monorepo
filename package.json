{
  "name": "pag0-monorepo",
  "private": true,
  "scripts": {
    "dev:proxy": "pnpm --filter @pag0/proxy dev",
    "dev:proxy:prod": "pnpm --filter @pag0/proxy dev:prod",
    "dev:dashboard": "pnpm --filter @pag0/dashboard dev",
    "dev:dashboard:prod": "pnpm --filter @pag0/dashboard dev:prod",
    "dev:mcp": "pnpm --filter @pag0/mcp dev",
    "dev": "pnpm --filter @pag0/proxy dev & pnpm --filter @pag0/dashboard dev & wait",
    "dev:prod": "pnpm --filter @pag0/proxy dev:prod & pnpm --filter @pag0/dashboard dev:prod & wait",
    "build": "pnpm run --recursive build",
    "lint": "pnpm run --recursive lint",
    "test": "pnpm --filter @pag0/proxy test",
    "db:migrate": "pnpm --filter @pag0/proxy db:migrate",
    "db:migrate:prod": "pnpm --filter @pag0/proxy db:migrate:prod",
    "db:seed": "pnpm --filter @pag0/proxy db:seed",
    "db:seed:prod": "pnpm --filter @pag0/proxy db:seed:prod",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:reset": "docker compose down -v && docker compose up -d && sleep 3 && pnpm db:migrate && pnpm db:seed",
    "docker:logs": "docker compose logs -f",
    "setup": "docker compose up -d && sleep 3 && pnpm db:migrate && pnpm db:seed && echo 'Ready! Run: pnpm dev'"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.15.4"
}
